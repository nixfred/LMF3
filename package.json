{
  "name": "lmf3",
  "version": "4.1.0",
  "description": "LMF - Persistent memory system for Claude Code",
  "type": "module",
  "bin": {
    "mem": "./dist/index.js",
    "mem-mcp": "./dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/mcp-server.ts --format esm --dts --clean --external bun:sqlite && sed -i '1s|#!/usr/bin/env node|#!/usr/bin/env bun|' dist/index.js dist/mcp-server.js",
    "dev": "tsup src/index.ts src/mcp-server.ts --format esm --watch --external bun:sqlite",
    "test": "vitest",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "commander": "^12.1.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nixfred/LMF3"
  },
  "keywords": [
    "claude-code",
    "ai-memory",
    "sqlite",
    "fts5",
    "mcp"
  ],
  "author": "nixfred",
  "license": "MIT"
}
